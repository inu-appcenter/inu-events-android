<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InuEvents" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/primary</item>
        <item name="android:textCursorDrawable">@color/primary</item>
        <item name="android:textColorHighlight">@color/primary</item>
        <item name="android:editTextColor">@color/black1</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:timePickerStyle">@style/MyTimePickerTheme</item>
    </style>

        <!--  Splash theme  -->
    <style name="Theme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_splash</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <!--  TimePicker theme  -->
    <style name="MyTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>
</resources>