<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/drawable_login_dialog_background"
    android:elevation="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:text="로그인하시겠습니까?"
        android:textColor="@color/black1"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginDialogCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/loginDialogOk"
        android:background="@drawable/drawable_login_dialog_button_background"
        android:maxHeight="30dp"
        android:minWidth="30dp"
        android:paddingHorizontal="12dp"
        android:text="취소"
        android:textColor="@color/black8"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginDialogOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:background="@drawable/drawable_login_dialog_button_background"
        android:minWidth="30dp"
        android:paddingHorizontal="12dp"
        android:text="확인"
        android:textColor="@color/primary"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>