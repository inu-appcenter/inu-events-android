<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    android:background="@drawable/drawable_login_dialog_background"
    android:elevation="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="로그인하시겠습니까?"
        android:textColor="@color/black1"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_login_dialog_button_background"
            android:maxHeight="30dp"
            android:minWidth="30dp"
            android:paddingHorizontal="12dp"
            android:text="취소"
            android:textColor="@color/black8"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginDialogOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/drawable_login_dialog_button_background"
            android:minWidth="30dp"
            android:paddingHorizontal="12dp"
            android:text="확인"
            android:textColor="@color/primary"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />


    </LinearLayout>

</LinearLayout>