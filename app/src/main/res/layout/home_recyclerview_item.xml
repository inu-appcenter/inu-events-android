<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="homeData"
            type="org.inu.events.data.model.entity.Event" />

        <variable
            name="viewModel"
            type="org.inu.events.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="8dp"
            app:layout_constraintDimensionRatio="H,1:1.414"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/board_title"
            android:background="@drawable/drawable_home_board_image_background"
            />

        <ImageView
            android:id="@+id/home_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            tools:srcCompat="@drawable/img_home_board_sample_image1" />

        <TextView
            android:id="@+id/board_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{homeData.title}"
            android:textColor="@color/black1"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:text="뭐라구?앱센터 13기 신입 멤버를 모집한다구?" />

        <TextView
            android:id="@+id/board_date"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="58dp"
            android:layout_marginBottom="16dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:background="@drawable/drawable_home_board_date_deadline_background"
            tools:text="마감" />

        <TextView
            android:id="@+id/board_institution"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="18dp"
            android:text="@{homeData.category}"
            android:textColor="@color/black8"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/board_date"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:text="동아리" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>