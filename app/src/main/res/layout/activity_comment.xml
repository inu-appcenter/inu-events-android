<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"></import>

        <variable
            name="commentViewModel"
            type="org.inu.events.viewmodel.CommentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/commentToolbar"
            layout="@layout/toolbar_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@{@string/comment}" />

        <TextView
            android:id="@+id/howManyCommentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:layout_marginTop="24dp"
            android:text="@{commentViewModel.commentSizeText}"
            android:textColor="@color/black1"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/commentToolbar"
            tools:ignore="HardcodedText"
            tools:text="댓글 2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@id/bottomBar"
            app:layout_constraintTop_toBottomOf="@id/howManyCommentTextView"
            tools:listitem="@layout/item_comment" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/commentEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="no"
                android:background="@null"
                android:hint="댓글을 입력하세요."
                android:inputType="text"
                android:paddingVertical="10dp"
                android:text="@={commentViewModel.content}"
                android:textColor="@color/black1"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/commentEnrollButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_comment_btn"
                android:onClick="@{()->commentViewModel.onClickBtn()}"
                android:text="등록"
                android:textColor="@color/white"
                android:textSize="@dimen/body2"
                android:visibility="@{commentViewModel.isLoggedIn() == true ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/commentLoginButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_comment_btn"
                android:onClick="@{()->commentViewModel.onClickBtn()}"
                android:text="로그인"
                android:textColor="@color/white"
                android:textSize="@dimen/body2"
                android:visibility="@{commentViewModel.isLoggedIn() == false ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>